<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FifthWeek">

    <TextView
        android:id="@+id/ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="19dp"
        android:inputType="textMultiLine"
        android:gravity="left"
        android:paddingLeft="15dp"
        android:lines="3"

        android:text=""
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radioGroup3"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:textSize="16sp"
        android:layout_below="@+id/ques"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">



        <RadioButton
            android:id="@+id/ans1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/ques"
            android:layout_marginTop="15dp"
            android:duplicateParentState="false"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/ans2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="RadioButton"
            android:textSize="16sp"
            android:layout_below="@+id/ans1"

            android:layout_alignStart="@+id/ans1" />

        <RadioButton
            android:id="@+id/ans3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="RadioButton"
            android:layout_below="@+id/ans2"
            android:layout_alignStart="@+id/ans2"
            android:layout_marginTop="15dp"
            android:layout_alignLeft="@+id/ans2" />

        <RadioButton
            android:id="@+id/ans4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:textSize="16sp"
            android:layout_below="@+id/ans3"
            android:layout_alignStart="@+id/ans3"
            android:layout_marginTop="15dp"
            android:layout_alignLeft="@+id/ans3" />

    </RadioGroup>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_below="@+id/radioGroup3"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="result"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/submit"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="result"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_below="@+id/status"
        android:layout_alignStart="@+id/status"
        android:layout_alignLeft="@+id/status" />
</RelativeLayout>